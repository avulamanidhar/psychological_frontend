<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_splash">

    <!-- Back Button -->
    <LinearLayout
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="‹ Home"
            android:textColor="@color/desc_gray"
            android:textSize="18sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI Insights"
                android:textColor="@color/title_blue"
                android:textSize="32sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <!-- Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/button_blue"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/txtThisWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="THIS WEEK'S SUMMARY"
                        android:textColor="#B3FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/scoreContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtThisWeek"
                        android:layout_marginTop="12dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="78"
                            android:textColor="@color/white"
                            android:textSize="48sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginBottom="12dp"
                            android:text="/100"
                            android:textColor="#B3FFFFFF"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/scoreContainer"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="12dp"
                        android:layout_toEndOf="@+id/scoreContainer"
                        app:cardBackgroundColor="#33FFFFFF"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="↑ +12 from last week"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/scoreContainer"
                        android:layout_marginTop="8dp"
                        android:text="Overall emotional wellness score"
                        android:textColor="#B3FFFFFF"
                        android:textSize="14sp" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Insights Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:columnCount="2">

                <!-- Mood Trends -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMoodTrends"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/img_45" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="Mood Trends" android:textColor="@color/title_blue" android:textStyle="bold" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Weekly &amp; monthly charts" android:textColor="@color/desc_gray" android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Indicators -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardKeyIndicators"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="#F5F3FF"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/img_46" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="Indicators" android:textColor="@color/title_blue" android:textStyle="bold" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Stress, anxiety, mood" android:textColor="@color/desc_gray" android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Patterns -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPatterns"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="#F0FDF4"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/img_47" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="Patterns" android:textColor="@color/title_blue" android:textStyle="bold" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Recurring emotions" android:textColor="@color/desc_gray" android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Compare -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCompare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="#FFF7ED"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/img_48" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="Compare" android:textColor="@color/title_blue" android:textStyle="bold" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Today vs past" android:textColor="@color/desc_gray" android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Recommendations -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardRecommendations"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="#FEFCE8"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/img_49" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="Recommendations" android:textColor="@color/title_blue" android:textStyle="bold" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Personalized tips" android:textColor="@color/desc_gray" android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- AI Analysis -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAIAnalysis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="#F8FAFC"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                        <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/img_50" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="AI Analysis" android:textColor="@color/title_blue" android:textStyle="bold" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="How insights work" android:textColor="@color/desc_gray" android:textSize="12sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>